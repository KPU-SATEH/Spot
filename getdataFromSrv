$result = array();
while($row = mysqli_fetch_array($res)){
array_push($result, array('HardAccNum'=>$row[6], 'HardStopNum'=>$row[7], 'QuickStartNum'=>$row[8], 'EchoDriving'=>$row[9], 'RecklessDriving'=>$row[10], 'DozeDriving'=>$row[11]));
}
